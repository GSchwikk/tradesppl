<div class= "row">
    <div class = "col-md-3 text-center">
        <%= image_tag @user.profile.avatar.url, class: 'user-show-avatar' %>
    </div>
    <div class = "col-md-6">
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>

        <div class= "well profile-block profile-description">
            <h3>Description</h3>
            <%= @user.profile.description %>
        </div>
        <div class= "well profile-block profile-skills">
            <h3>Skills</h3>
                <ul class="list-unstyled">
                    <li><span class="skill-icon"><%= skill_icon1 %></span> <%= @skill1.name %></li><br>
                    <li><span class="skill-icon"><%= skill_icon2 %></span> <%= @skill2.name %></li><br>
                    <li><span class="skill-icon"><%= skill_icon3 %></span> <%= @skill3.name %></li>
                </ul>
        </div>
        <%#  if current_user.role_id == 2 %>
        <div class="well profile-block contact-info">
            <h3>Request</h3>
            <!-- Need to add contact form -->
            <%#= @user.profile.phone_number %><br>
            <%#= @user.profile.contact_email %><br>
        </div>
        <%# end %>
    </div>
</div>